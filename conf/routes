# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /geo                        controllers.BrowserGeoController.index
GET     /googlemap                  controllers.GoogleMapsController.index(lat: Float ?= 0, lon: Float ?= 0, zoom: Float ?= 0, radius: Float ?= 100, limit: Int ?= 50, address: Option[String], geolat: Option[Float], geolon: Option[Float])
GET     /api/facilities/js-array    controllers.GoogleMapsController.getFacilities(lat: Float, lon: Float, radius: Float ?= 100, limit: Int ?= 50)
GET     /                           controllers.HomeController.index(lat: Float ?= 0, lon: Float ?= 0, zoom: Float ?= 0, radius: Float ?= 100, limit: Int ?= 50, address: Option[String], geolat: Option[Float], geolon: Option[Float])


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
